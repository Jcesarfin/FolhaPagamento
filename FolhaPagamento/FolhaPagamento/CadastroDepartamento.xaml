<Window x:Name="telaCadDepartamento" x:Class="FolhaPagamento.CadastroDepartamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolhaPagamento"
        mc:Ignorable="d"
        Title="Cadastro de Departamentos" Background="#FFF17272">
    <Window.Resources>
        <Color x:Key="#FFF17272">#FFD65252</Color>
    </Window.Resources>
    <Grid>
        <Label x:Name="lblTituloCadDepto" Content="INFORME OS DADOS:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblNomeDepto" Content="NOME DEPARTAMENTO:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblLocalDepto" Content="LOCALIZAÇÃO:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNomeDepto" HorizontalAlignment="Left" Height="23" Margin="162,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtLocalDepto" HorizontalAlignment="Left" Height="23" Margin="162,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSalvarCadDepto" Content="SALVAR" HorizontalAlignment="Left" Margin="207,233,0,0" VerticalAlignment="Top" Width="75" FontSize="8"/>
        <Button x:Name="btnVoltarMenu" Content="MENU CADASTRO" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top" Width="89" FontSize="8" Click="btnVoltarMenu_Click"/>

    </Grid>
</Window>
